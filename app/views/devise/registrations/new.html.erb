<div class="container">
  <div class="row">
    <div class="card mx-auto p-5 w-50" style="margin-top: 100px;">
      <h2 class="mx-auto">新規会員登録</h2>
      <div class="card-body">
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <div class="form-group">
            <%= f.label "メールアドレス"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "ユーザ名"%>
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "パスワード" %>
            <% if @minimum_password_length %>
            <em>(最低<%= @minimum_password_length %>文字)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "パスワード再入力" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
          </div>

          <div class="form-group mt-5">
            <%= f.submit "登録", class:"btn btn-success btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>