<div class="container">
  <div class="row">
    <div class="card mx-auto p-5 w-50" style="margin-top: 100px;">
      <h2 class="mx-auto">ログイン</h2>
      <div class="card-body">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
          </div>
          <div class="form-group mt-5">
            <%= f.submit "ログイン", class:"btn btn-primary btn-block" %>
          </div>

          <div class="form-group mt-5">
            <p>初めてご利用の方</p>
            <%= link_to "新規会員登録", new_registration_path(resource_name), class:"btn btn-success btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
