<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @place, url: post_places_path(@post_id), method: :post do |f| %>
        <div class="form-group">
          <%= f.label :place_name, "訪れた場所" %><br>
          <%= f.text_field :place_name %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %><br>
          <%= f.text_field :address %>
        </div>

        <div class="form-group">
          <%= f.select :place_num, @place_num + ["新規追加"] %>
        </div>

        <div class="form-group">
          <%= f.label :comment, "コメント" %><br>
          <%= f.text_field :comment %>
        </div>

        <%= f.submit "登録" ,class: "btn btn-primary"%>

      <% end %>
    </div>
  </div>
</div>