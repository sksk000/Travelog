<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with method: :get , url: search_result_path do |f| %>
        <div class="form-group">
          <%= f.text_field :seachdata %>
          <%= f.select :is_search_category, options_for_select([['User'], ['Post']])%>
          <%= f.select :is_search_condition, options_for_select([['PartialMatch'], ['PerfectMatch']]) %>
          <%= f.submit "検索" ,class: "btn btn-primary"%>
          <div id="dropdown_content">
            <%= f.select :is_search_season, [['全季節', 'all_seasons']] + Post.seasons.keys.map { |key| [key.humanize, key] } %>
            <%= f.select :is_search_place, [['全旅行先', 'all_places']] + Post.places.keys.map { |key| [key.humanize, key] } %>
            <%= f.select :is_search_night, [['指定なし', 'all_nights']] + Post.nights.keys.map { |key| [key.humanize, key] } %>
            <%= f.select :is_search_people, [['指定なし', 'all_people']] + Post.people.keys.map { |key| [key.humanize, key] } %>
          </div>
        </div>
      <% end %>
       <%= button_tag "スライド", type: "button", onclick: "downcontent()" %>
    </div>
  </div>
  <script>
   function downcontent(){
      var content = document.getElementById('dropdown_content');
      console.log(content)
      if(content.style.display == 'block'){
        content.style.display = 'none'
      }else{
        content.style.display = 'block'
      }
   }
  </script>
</div>


