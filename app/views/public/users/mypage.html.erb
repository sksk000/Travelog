<div class="container">
  <div class="row">
    <div class="col">
      <h1>マイページ</h1>
        <%= link_to 'ユーザ編集', infomation_users_path, class: "btn btn-primary" %>
        <h3>投稿一覧</h3>
        <table class="table">
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">作成日</th>
        </tr>
        <tbody>
          <% @user.posts.each do | post | %>
            <tr>
            <% if post.is_release == true or (post.is_release == false and post.user_id == current_user.id )%>
              <td><%= link_to post.title , post_path( post.id ) %></td>
              <td><%= post.created_at %></td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>