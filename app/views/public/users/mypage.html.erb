<div class="container">
  <div class="row">
    <div class="col">
      <h1>マイページ</h1>
        <%= render 'public/searches/search.html.erb' %>
        <%= link_to 'ユーザ編集', infomation_users_path, class: "btn btn-primary" %>
        <h3>投稿一覧</h3>
          <% @user.posts.each do | post | %>
            <% if post.is_release == true or (post.is_release == false and post.user_id == current_user.id )%>
              <div class="post_data m-3">
                <%= link_to post.title , post_path( post.id ) %>
                <%= post.user.name %>
                <%= post.updated_at %>
              </div>
            <% end %>
          <% end %>
    </div>
  </div>
</div>