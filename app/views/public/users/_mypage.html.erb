 <div class="row">
  <div class="col user_image">
    <label><プロフィール画像></label>
    <%= user_profile_image(user, "200x200") %>
  </div>
  <div class="col-8">
    <div class="username">
      <label>ユーザ名：</label>
      <%= user.name %>
    </div>

    <div class="introduction">
      <label>自己紹介：</label>
      <%= user.introduction %>
    </div>
  </div>

  <%= render 'public/users/mypage_dropdown_menu.html.erb', user: user %>
 </div>

<div class="btn-group btn-group-toggle w-100" data-toggle="buttons">
  <%= link_to mypage_path(user.id), class: "btn btn-secondary w-100 #{'active' if current_page?(mypage_path(user.id))}" do %>
    投稿一覧
  <% end %>
  <%= link_to mypage_place_path(user.id), class: "btn btn-secondary w-100 #{'active' if current_page?(mypage_place_path(user.id))}" do %>
    訪れた場所一覧
  <% end %>
</div>