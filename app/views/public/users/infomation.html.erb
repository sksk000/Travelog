<h2>ユーザ詳細画面</h2>

<%= form_with url: infomation_users_path, model:@user, method: :patch do |f| %>
    <label for="username">Username</label>
    <%= current_user.name %>

    <div class="form-group">
        <label for="password">Password</label>
        <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

   <div class="form-group">
        <label for="is_showfile">show or notshow</label>
        <%= f.select :is_showprofile, [['show', 'true'], ['notshow', 'false']], { include_blank: "Select", selected: 'true' } %>
   </div>

    <%= f.submit "Update" , class: "btn btn-success"%>
<% end %>


