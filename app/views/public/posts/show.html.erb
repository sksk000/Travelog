<div class="container-fluid" data-controller="post">
  <div class="row">
    <div class="col-md-3 overflow-auto" style = "background-color: #f0f8ff; height: 100vh;">
      <% if @post.image.present? %>
        <%= image_tag @post.image, size: "400x300", class:"mt-3 rounded mx-auto d-block" %>
      <% else %>
        <%= image_tag asset_path('no_image.jpg'),size: "400x300", class:"mt-3 rounded mx-auto d-block" %>
      <% end %>

      <div class="title mt-3">
        <h3><%= @post.title %></h3>
      </div>
      <div class="date mt-3">
        <p>投稿日：<%= @post.created_at %></p>
      </div>
      <div class="body mt-3 border rounded bg-white">
        <h5><旅行の概要></h5>
        <%= simple_format(h(@post.body)) %>
      </div>
      <div class="place mt-3 border rounded bg-white">
        <h5><訪れた場所一覧></h5>
        <% @place.each_with_index do | place, i |%>
          <a class="link-opacity-25-hover" data-action="click->post#moveMaker" data-post-target="placedata" data-latitude="<%= place.latitude%>" data-longitude="<%= place.longitude%>"> <%= place.place_name %></a>
          <% if @place.length - 1 > i %>
            <div  class="border-right border-secondary" style="height: 20px; width: 20px;"></div>
          <% end %>
        <% end %>
      </div>
      <div class="info mt-3 border rounded bg-white">
        <h5><詳細情報></h5>
        <div class="month mt-3 ">
          <p>旅行月：<%= @post.travelmonth %>月</p>
        </div>
        <div class="place mt-3">
          <label>都道府県名</label>
          <% @prefectures.each do | prefecture |%>
            <p class="badge badge-pill badge-secondary"> <%= prefecture.prefecture %>県</p>
          <% end %>
        </div>
        <div class="people mt-3">
          <p>人数：<%= @post.people %></p>
        </div>
        <div class="people mt-3">
          <p>宿泊数：<%= @post.night %></p>
        </div>
        <div class="good mt-3">
          旅行点数：<%= render 'public/posts/good.html.erb', is_good_edit: false, modelname: "post", model: @post %></p>
        </div>
        <div class="tag mt-3">
          <% @tags.each do | tag |%>
            <div class="badge badge-pill badge-secondary"> #<%= tag.name %></div>
          <% end %>
        </div>
      </div>

      <div class="p-5"></div>
      <div class="p-5"></div>
    </div>
    <div class="col-6 p-0">
      <div id="post_map" data-id="<%= @post_id %>" style="height: 100vh;"></div>
    </div>
    <div class="col overflow-auto p-0" style = "background-color: #f0f8ff; height: 100vh;" data-controller="comment">
      <%= form_with url: post_comments_path(@post.id), method: :post, html: { multipart: true },data: { action: "submit->comment#submitForm", comment_target: "form" } do |f| %>
        <div class="form-group mt-3">
          <%= f.text_area :comment, size: " 100 x 5 ", class:"form-control", data: { comment_target: "comment" }, placeholder:'記事についてコメントしてみよう！'  %>
        </div>
        <div class="form-group text-right">
          <button type="button" class="btn btn-success" data-comment-target="submit"  data-action="click->comment#submitForm">
            コメント投稿
          </button>
        </div>
      <% end %>
      <div class="comment" data-comment-target="commentindex">
        <% @comments.each do | comment |%>
          <%= render 'public/posts/comment.html.erb', comment: comment, user: comment.user %>
        <% end %>
        <div class="p-5"></div>
        <div class="p-5"></div>
      </div>
    </div>
  </div>
</div>
<% breadcrumb :post_show, @post %>