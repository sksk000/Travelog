<div class="card w-100" style="width: 18rem;">
  <div class="card-body d-flex">
    <div class="image mr-4">
      <% if user.profile_image.attached?  %>
        <%= image_tag rails_blob_path(user.profile_image),size: "50x50"%>
      <% else %>
        <%= image_tag asset_path('no_image.jpg'), size: "50x50"%>
      <% end %>
    </div>
    <div class="text">
      <div class="userdata">
        <label class="card-text"><%= user.name %></label>
        <label class="ml-2"><%= comment.created_at %></label>
      </div>
      <div class="card-text mt-1"><%= simple_format(h(comment.comment)) %></div>
    </div>
    <div class="delete ml-auto">
      <% if current_user.id == user.id %>
        <button type="button" class="btn btn-danger btn-sm" data-action="click->comment#deleteComment" data-postid="<%= post_id %>" data-commentid="<%= comment.id %>" >
          削除
        </button>
      <% end %>
    </div>
  </div>
</div>