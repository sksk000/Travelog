<div class="container">
  <div class="row">
    <div class="col">
      <h2>投稿編集ページ</h2>

      <%= form_with model: @post do |f| %>

        <div class="form-group">
          <%= f.label :title, "タイトル" %><br>
          <%= f.text_field :title %>
        </div>

        <div class="form-group">
          <%= f.label :body, "投稿内容" %><br>
          <%= f.text_area :body %>
        </div>
        <div id="star">
        </div>
        <script>
          let elem = document.querySelector('#star');
          let option = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            scoreName: "post[good]"
          };
          raty(elem, option);
        </script>

        <%= f.submit "更新" ,class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
