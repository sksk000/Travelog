<% if is_good_edit == true %>
  <div id="star_comment_edit"></div>
<script>
  var elem = document.querySelector('#star_comment_edit');
  elem.innerHTML = ""
  var option = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: "comment[good]"
  };
  raty(elem, option);
</script>

<% else %>
<div id = "star_comment_show"></div>
<script>
  var elem = document.querySelector('#star_comment_show');
  elem.innerHTML = ""
  var option = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      readOnly: true,
      score: <%= commentdata.good %>
  };
  raty(elem, option);
</script>

<% end %>